<Window x:Class="timeline.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:timeline" xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Story Timelines 2.0" Height="700" Width="1200"
        Background="#FFF0F5">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#B0E0E6"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="BorderBrush" Value="#87CEEB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#9DD5DE"/>
                    <Setter Property="BorderBrush" Value="#6BB6C1"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#8BC5CE"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid
        LayoutTransform="{StaticResource GlobalWindowScaleTransform}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Story Timelines" 
                   FontSize="30" 
                   FontWeight="Bold"
                   TextDecorations="Underline"
                   HorizontalAlignment="Center"
                   Margin="10">
            <iconPacks:PackIconBootstrapIcons Kind="Book" Width="36" Height="36" Margin="0,0,10,0" VerticalAlignment="Center"/>
        </TextBlock>

        <ListBox x:Name="TimelineListBox" 
                 Grid.Row="1"
                 Grid.Column="0"
                 Margin="40,20,400,20"
                 SelectionChanged="TimelineListBox_SelectionChanged"
                 MouseMove="TimelineListBox_MouseMove">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                   Text="{Binding Title}" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   Padding="10,8"/>
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding Author}" 
                                   FontSize="13" 
                                   FontStyle="Italic"
                                   Foreground="#666666"
                                   VerticalAlignment="Center"
                                   Padding="10,8,15,8"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Grid
            Margin="0,20,42,20" 
            HorizontalAlignment="Right"
            Width="346"
            Grid.Row="1"
            Grid.Column="0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <!-- Title of the timeline -->
            <Label x:Name="PreviewTitleLabel"
                Grid.Column="0"
                Grid.Row="0"
                FontSize="18"
                TextOptions.TextRenderingMode="ClearType"
                Content=""
                />

            <!-- Author of the timeline -->
            <Label x:Name="PreviewAuthorLabel"
                Grid.Column="0"
                Grid.Row="1"
                FontStyle="Italic"
                FontSize="8"
                Margin="20, -5, 0, 0"
                Content=""
                />

            <!-- Description -->
            <TextBlock x:Name="PreviewDescriptionTextBlock"
                Grid.Column="0"
                Grid.Row="2"
                TextWrapping="Wrap"
                Margin="5, 5, 0, 0"
                Text=""
                />

            <!-- Associated image -->
            <Image x:Name="PreviewImage"
                Grid.Column="1"
                Grid.Row="0"
                Grid.RowSpan="3"
                Width="100"
                Height="100"
                Margin="10,10,10,0"
                VerticalAlignment="Top"
                Panel.ZIndex="100"
                Stretch="UniformToFill"
                />

        </Grid>

        <Button x:Name="ImportDatabaseButton" 
                Grid.Row="2"
                HorizontalAlignment="Center"
                Width="49" 
                Height="40"
                Margin="0,10,0,10"
                ToolTip="Import Database"
                Click="ImportDatabaseButton_Click">
            <iconPacks:BootstrapIcons Kind="DatabaseDown" Width="24" Height="24" />

        </Button>
    </Grid>
</Window>
